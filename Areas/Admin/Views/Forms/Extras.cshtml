@{
  ViewData["Title"] = "فرم ها - موارد اضافی";
}

@section VendorStyles {

<link rel="stylesheet" href="~/vendor/libs/bootstrap-maxlength/bootstrap-maxlength.css" />
}

@section VendorScripts {
<script src="~/vendor/libs/autosize/autosize.js"></script>
<script src="~/vendor/libs/cleavejs/cleave.js"></script>
<script src="~/vendor/libs/cleavejs/cleave-phone.js"></script>
<script src="~/vendor/libs/bootstrap-maxlength/bootstrap-maxlength.js"></script>
<script src="~/vendor/libs/jquery-repeater/jquery-repeater.js"></script>
}

@section PageScripts {
<script src="~/js/forms-extras.js"></script>
}
@* ************** Content ************** *@

<h4 class="py-3 mb-4">
  <span class="text-muted fw-light">فرم ها /</span>
  موارد اضافی
</h4>
<div class="row">
  <!-- Autosize -->
  <div class="col-12">
    <div class="card mb-4">
      <h5 class="card-header">اندازه اتوماتیک</h5>
      <div class="card-body">
        <textarea class="form-control" id="autosize-demo" rows="3"></textarea>
      </div>
    </div>
  </div>
  <!-- /Autosize -->
  <!-- Input Mask -->
  <div class="col-12">
    <div class="card mb-4">
      <h5 class="card-header">فرمت ورودی CleaveJS</h5>
      <div class="card-body">
        <div class="row">
          <!-- Credit Card -->
          <div class="col-xl-4 col-md-6 col-sm-12 mb-4">
            <label class="form-label" for="creditCardMask">کارت اعتباری</label>
            <div class="input-group input-group-merge">
              <input aria-describedby="creditCardMask2" class="form-control credit-card-mask ltr" id="creditCardMask" name="creditCardMask" placeholder="1356 3215 6548 7898" type="text"/>
              <span class="input-group-text cursor-pointer p-1" id="creditCardMask2">
                <span class="card-type"></span>
              </span>
            </div>
          </div>
          <!-- Phone Number -->
          <div class="col-xl-4 col-md-6 col-sm-12 mb-4">
            <label class="form-label" for="phone-number-mask">شماره تلفن</label>
            <div class="input-group">
              <input class="form-control phone-number-mask ltr" id="phone-number-mask" placeholder="91# ### ####" type="text"/>
              <span class="input-group-text">IR (+98)</span>
            </div>
          </div>
          <!-- Date -->
          <div class="col-xl-4 col-md-6 col-sm-12 mb-4">
            <label class="form-label" for="date-mask">تاریخ</label>
            <input class="form-control date-mask ltr" id="date-mask" placeholder="YYYY-MM-DD" type="text"/>
          </div>
          <!-- Time -->
          <div class="col-xl-4 col-md-6 col-sm-12 mb-4">
            <label class="form-label" for="time-mask">زمان</label>
            <input class="form-control time-mask ltr" id="time-mask" placeholder="hh:mm:ss" type="text"/>
          </div>
          <!-- Numeral Formatting -->
          <div class="col-xl-4 col-md-6 col-sm-12 mb-4">
            <label class="form-label" for="numeral-mask">فقط عدد</label>
            <input class="form-control numeral-mask" id="numeral-mask" placeholder="عدد را وارد کنید" type="text"/>
          </div>
          <!-- Blocks -->
          <div class="col-xl-4 col-md-6 col-sm-12 mb-4">
            <label class="form-label" for="block-mask">بلوک ها</label>
            <input class="form-control block-mask" id="block-mask" placeholder="بلوک‌ها [4، 3، 3]" type="text"/>
          </div>
          <!-- Delimiters -->
          <div class="col-xl-4 col-md-6 col-sm-12 mb-4 mb-xl-0">
            <label class="form-label" for="delimiter-mask">جداکننده‌ها</label>
            <input class="form-control delimiter-mask" id="delimiter-mask" placeholder=" جداکننده: &apos;.&apos;" type="text"/>
          </div>
          <!-- Custom Delimiters -->
          <div class="col-xl-4 col-md-6 col-sm-12 mb-4 mb-xl-0">
            <label class="form-label" for="custom-delimiter-mask">جداکننده های سفارشی</label>
            <input class="form-control custom-delimiter-mask" id="custom-delimiter-mask" placeholder=" جداکننده: [&apos;.&apos;، &apos;.&apos;، &apos;-&apos;]" type="text"/>
          </div>
          <!-- Prefix -->
          <div class="col-xl-4 col-md-6 col-sm-12">
            <label class="form-label" for="prefix-mask">پیشوند</label>
            <input class="form-control prefix-mask ltr" id="prefix-mask" type="text"/>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- /Input Mask -->
  <!-- Bootstrap Maxlength -->
  <div class="col-12">
    <div class="card mb-4">
      <h5 class="card-header">محدودیت کارکتر Bootstrap</h5>
      <div class="card-body">
        <div class="row">
          <div class="col-12 mb-4">
            <label class="form-label" for="bootstrap-maxlength-example1">فیلد</label>
            <input class="form-control bootstrap-maxlength-example" id="bootstrap-maxlength-example1" maxlength="25" type="text"/>
          </div>
          <div class="col-12">
            <label class="form-label" for="bootstrap-maxlength-example2">فیلد متن</label>
            <textarea class="form-control bootstrap-maxlength-example" id="bootstrap-maxlength-example2" maxlength="255" rows="3"></textarea>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- /Bootstrap Maxlength -->
  <!-- Form Repeater -->
  <div class="col-12">
    <div class="card">
      <h5 class="card-header">تکرار فرم</h5>
      <div class="card-body">
        <form class="form-repeater">
          <div data-repeater-list="group-a">
            <div data-repeater-item>
              <div class="row">
                <div class="mb-3 col-lg-6 col-xl-3 col-12 mb-0">
                  <label class="form-label" for="form-repeater-1-1">نام کاربری</label>
                  <input class="form-control" id="form-repeater-1-1" placeholder="نـوید" type="text"/>
                </div>
                <div class="mb-3 col-lg-6 col-xl-3 col-12 mb-0">
                  <label class="form-label" for="form-repeater-1-2">کلمه عبور</label>
                  <input class="form-control" id="form-repeater-1-2" placeholder="············" type="password"/>
                </div>
                <div class="mb-3 col-lg-6 col-xl-2 col-12 mb-0">
                  <label class="form-label" for="form-repeater-1-3">جنسیت</label>
                  <select class="form-select" id="form-repeater-1-3">
                    <option value="Male">مرد</option>
                    <option value="Female">زن</option>
                  </select>
                </div>
                <div class="mb-3 col-lg-6 col-xl-2 col-12 mb-0">
                  <label class="form-label" for="form-repeater-1-4">حرفه</label>
                  <select class="form-select" id="form-repeater-1-4">
                    <option value="Designer">طراح</option>
                    <option value="Developer">توسعه دهنده</option>
                    <option value="Tester">تستر</option>
                    <option value="Manager">مدیر</option>
                  </select>
                </div>
                <div class="mb-3 col-lg-12 col-xl-2 col-12 d-flex align-items-center mb-0">
                  <button class="btn btn-label-danger mt-4" data-repeater-delete>
                    <i class="ti ti-x ti-xs me-1"></i>
                    <span class="align-middle">حذف</span>
                  </button>
                </div>
              </div>
              <hr/>
            </div>
          </div>
          <div class="mb-0">
            <button class="btn btn-primary" data-repeater-create>
              <i class="ti ti-plus me-1"></i>
              <span class="align-middle">افزودن</span>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <!-- /Form Repeater -->
</div>
