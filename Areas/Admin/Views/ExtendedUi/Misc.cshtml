@{
  ViewData["Title"] = "طراحی سفارشی - سایر";
}
@section VendorStyles {
  <link rel="stylesheet" href="~/vendor/libs/toastr/toastr.css" />
  <link rel="stylesheet" href="~/vendor/libs/animate-css/animate.css" />
}
@section VendorScripts {
  <script src="~/vendor/libs/clipboard/clipboard.js"></script>
  <script src="~/vendor/libs/moment/moment.js"></script>
  <script src="~/vendor/libs/idletimer/idletimer.js"></script>
  <script src="~/vendor/libs/numeral/numeral.js"></script>
  <script src="~/vendor/libs/toastr/toastr.js"></script>
}
@section PageScripts {
  <script src="~/js/extended-ui-misc-clipboardjs.js"></script>
  <script src="~/js/extended-ui-misc-idle-timer.js"></script>
  <script src="~/js/extended-ui-misc-numeraljs.js"></script>
