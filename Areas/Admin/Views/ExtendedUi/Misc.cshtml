@* ************** Content ************** *@

<h4 class="py-3 mb-4">
  <span class="text-muted fw-light">طراحی سفارشی /</span>
  سایر
</h4>
<div class="row">
  <!-- Clipboard -->
  <div class="col-12">
    <div class="card mb-4">
      <h5 class="card-header">کلیپ بورد</h5>
      <div class="card-body">
        <div class="row">
          <div class="col-md-4 col-sm-12 pe-0 mb-md-0 mb-2">
            <input class="form-control" id="clipboard-example" type="text" value="متن تست" />
          </div>
          <div class="col-md-4 col-sm-12">
            <button class="clipboard-btn btn btn-primary me-2" data-clipboard-action="copy"
              data-clipboard-target="#clipboard-example">
              کپی
            </button>
            <button class="clipboard-btn btn btn-primary" data-clipboard-action="cut"
              data-clipboard-target="#clipboard-example">
              کات
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- /Clipboard -->
  <!-- Ideal Timer -->
  <div class="col-12">
    <div class="card mb-4">
      <h5 class="card-header">تایمر ایده آل</h5>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6 col-12 mb-md-0 mb-4">
            <p>
              <small>وقفه 5 ثانیه‌ای</small>
              صفحه
            </p>
            <div class="btn-group mb-3">
              <button class="btn btn-primary btn-sm" id="document-Pause" type="button">
                <span class="d-none d-sm-block">مکث pause</span>
                <i class="ti ti-player-pause ti-xs d-sm-none"></i>
              </button>
              <button class="btn btn-primary btn-sm" id="document-Resume" type="button">
                <span class="d-none d-sm-block">ادامه Resume</span>
                <i class="ti ti-player-play ti-xs d-sm-none"></i>
              </button>
              <button class="btn btn-primary btn-sm" id="document-Elapsed" type="button">
                <span class="d-none d-sm-block">سپری شده Elapsed</span>
                <i class="ti ti-hourglass ti-xs d-sm-none"></i>
              </button>
              <button class="btn btn-primary btn-sm" id="document-Init" type="button">
                <span class="d-none d-sm-block">شروع Init</span>
                <i class="ti ti-plus ti-xs d-sm-none"></i>
              </button>
              <button class="btn btn-primary btn-sm" id="document-Destroy" type="button">
                <span class="d-none d-sm-block">از بین بردن Destroy</span>
                <i class="ti ti-x ti-xs d-sm-none"></i>
              </button>
            </div>
            <textarea class="form-control text-end" cols="30" id="document-Status" rows="10"></textarea>
          </div>
          <div class="col-md-6 col-12">
            <p> عناصر
              <small>وقفه ۳ ثانیه‌ای</small>
            </p>
            <div class="btn-group mb-3">
              <button class="btn btn-primary btn-sm" id="element-Reset" type="button">
                <span class="d-none d-sm-block">ریست Reset</span>
                <i class="ti ti-refresh ti-xs d-sm-none"></i>
              </button>
              <button class="btn btn-primary btn-sm" id="element-LastActive" type="button">
                <span class="d-none d-sm-block">آخرین فعالیت LastActive</span>
                <i class="ti ti-clock-2 ti-xs d-sm-none"></i>
              </button>
              <button class="btn btn-primary btn-sm" id="element-Remaining" type="button">
                <span class="d-none d-sm-block">باقی مانده Remaining</span>
                <i class="ti ti-device-watch-stats-2 ti-xs d-sm-none"></i>
              </button>
              <button class="btn btn-primary btn-sm" id="element-State" type="button">
                <span class="d-none d-sm-block">حالت State</span>
                <i class="ti ti-device-watch ti-xs d-sm-none"></i>
              </button>
            </div>
            <textarea class="form-control text-end" cols="30" id="element-Status" rows="10"></textarea>
          </div>
        </div>
      </div>
    </div>
  </div>
