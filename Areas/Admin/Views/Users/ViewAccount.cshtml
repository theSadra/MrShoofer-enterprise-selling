@* ************** Content ************** *@
<h4 class="py-3 mb-4">
  <span class="text-muted fw-light">مشاهده کاربر/</span>
  حساب کاربری
</h4>
<div class="row">
  <!-- User Sidebar -->
  <div class="col-xl-4 col-lg-5 col-md-5 order-1 order-md-0">
    <!-- User Card -->
    <div class="card mb-4">
      <div class="card-body">
        <div class="user-avatar-section">
          <div class=" d-flex align-items-center flex-column">
            <img class="img-fluid rounded mb-3 pt-1 mt-4" src="~/img/avatars/15.png" height="100" width="100" alt="User avatar" />
            <div class="user-info text-center">
              <h4 class="mb-2">مهتاب کرامتی</h4>
              <span class="badge bg-label-secondary mt-1">نویسنده</span>
            </div>
          </div>
        </div>
        <div class="d-flex justify-content-around flex-wrap mt-3 pt-3 pb-4 border-bottom">
          <div class="d-flex align-items-start me-4 mt-3 gap-2">
            <span class="badge bg-label-primary p-2 rounded"><i class='ti ti-checkbox ti-sm'></i></span>
            <div>
              <p class="mb-0 fw-medium">1.23k</p>
              <small>تسک‌های موفق</small>
            </div>
          </div>
          <div class="d-flex align-items-start mt-3 gap-2">
            <span class="badge bg-label-primary p-2 rounded"><i class='ti ti-briefcase ti-sm'></i></span>
            <div>
              <p class="mb-0 fw-medium">568</p>
              <small>پروژه‌های موفق</small>
            </div>
          </div>
        </div>
        <p class="mt-4 small text-uppercase text-muted">جزئیات</p>
        <div class="info-container">
          <ul class="list-unstyled">
            <li class="mb-2">
              <span class="fw-medium me-1">نام کاربری:</span>
              <span>violet.dev</span>
            </li>
            <li class="mb-2 pt-1">
              <span class="fw-medium me-1">ایمیل:</span>
              <span>vafgot@vultukir.org</span>
            </li>
            <li class="mb-2 pt-1">
              <span class="fw-medium me-1">وضعیت:</span>
              <span class="badge bg-label-success">فعال</span>
            </li>
            <li class="mb-2 pt-1">
              <span class="fw-medium me-1">نقش:</span>
              <span>نویسنده</span>
            </li>
            <li class="mb-2 pt-1">
              <span class="fw-medium me-1">کد مالیاتی:</span>
              <span>Tax-8965</span>
            </li>
            <li class="mb-2 pt-1">
              <span class="fw-medium me-1">شماره موبایل:</span>
              <span>
                <bdi>0913 000 0000</bdi>
              </span>
            </li>
            <li class="mb-2 pt-1">
              <span class="fw-medium me-1">زبان ها:</span>
              <span>فرانسوی</span>
            </li>
            <li class="pt-1">
              <span class="fw-medium me-1">کشور:</span>
              <span>امارات متحده عربی</span>
            </li>
          </ul>
          <div class="d-flex justify-content-center">
            <a class="btn btn-primary me-3" data-bs-target="#editUser" data-bs-toggle="modal" href="javascript:">ویرایش</a>
            <a class="btn btn-label-danger suspend-user" href="javascript:">مسدود سازی</a>
          </div>
        </div>
      </div>
    </div>
    <!-- /User Card -->
    <!-- Plan Card -->
    <div class="card mb-4">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-start">
          <span class="badge bg-label-primary">استاندارد</span>
          <div class="d-flex justify-content-center">
            <sup class="h6 pricing-currency mt-3 mb-0 me-1 text-primary fw-normal">ءتء</sup>
            <h1 class="mb-0 text-primary">99</h1>
            <sub class="h6 pricing-duration mt-auto mb-2 text-muted fw-normal">درماه</sub>
          </div>
        </div>
        <ul class="ps-3 g-2 my-3">
          <li class="mb-2">امکان ارسال پیشنهاد برای 30 پروژه</li>
          <li class="mb-2">تا 10 گیگابایت فضای ذخیره سازی</li>
          <li>پشتیبانی تلفنی و درخواست مشاوره</li>
        </ul>
        <div class="d-flex justify-content-between align-items-center mb-1 fw-medium text-heading">
          <span>روزهای باقی مانده</span>
          <span>65٪ استفاده شده</span>
        </div>
        <div class="progress mb-1" style="height: 8px">
          <div aria-valuemax="100" aria-valuemin="0" aria-valuenow="65" class="progress-bar" role="progressbar" style="width: 65%"></div>
        </div>
        <span>4 روز</span>
        <div class="d-grid w-100 mt-4">
          <button class="btn btn-primary" data-bs-target="#upgradePlanModal" data-bs-toggle="modal"> تمدید اشتراک</button>
        </div>
      </div>
    </div>
    <!-- /Plan Card -->
  </div>
  <!--/ User Sidebar -->


  <!-- User Content -->
  <div class="col-xl-8 col-lg-7 col-md-7 order-0 order-md-1">
    <!-- User Pills -->
    <ul class="nav nav-pills flex-column flex-md-row mb-4">
      <li class="nav-item"><a class="nav-link active" href="javascript:void(0);"><i class="ti ti-user-check ti-xs me-1"></i>حساب کاربری</a></li>
      <li class="nav-item"><a class="nav-link" href="ViewSecurity"><i class="ti ti-lock ti-xs me-1"></i>امنیت حساب</a></li>
      <li class="nav-item"><a class="nav-link" href="ViewBilling"><i class="ti ti-currency-dollar ti-xs me-1"></i>تراکنش و پرداخت</a></li>
      <li class="nav-item"><a class="nav-link" href="ViewNotifications"><i class="ti ti-bell ti-xs me-1"></i>نوتیفیکیشن</a></li>
      <li class="nav-item"><a class="nav-link" href="ViewConnections"><i class="ti ti-link ti-xs me-1"></i>اکانت‌های متصل</a></li>
    </ul>
    <!--/ User Pills -->

    <!-- Project table -->
    <div class="card mb-4">
      <h5 class="card-header">لیست پروژه های کاربر</h5>
      <div class="table-responsive mb-3">
        <table class="table datatable-project border-top">
          <thead>
            <tr>
              <th></th>
              <th>پروژه</th>
              <th class="text-nowrap">کل کار</th>
              <th>درصد پیشروی</th>
              <th>ساعت ها</th>
            </tr>
          </thead>
        </table>
      </div>
    </div>
    <!-- /Project table -->

    <!-- Activity Timeline -->
    <div class="card mb-4">
      <h5 class="card-header">روند فعالیت‌ها کاربر</h5>
      <div class="card-body pb-0">
        <ul class="timeline mb-0">
          <li class="timeline-item timeline-item-transparent">
            <span class="timeline-point timeline-point-primary"></span>
            <div class="timeline-event">
              <div class="timeline-header mb-1">
                <h6 class="mb-0">12 فاکتور پرداخت شده است</h6>
                <small class="text-muted">12 دقیقه پیش</small>
              </div>
              <p class="mb-2">فاکتورها به شرکت پرداخت شده است</p>
              <div class="d-flex">
                <a href="javascript:void(0)" class="me-3">
                  <img src="~/img/icons/misc/pdf.png" alt="PDF image" width="15" class="me-2">
                  <span class="fw-medium text-heading">invoices.pdf</span>
                </a>
              </div>
            </div>
          </li>
          <li class="timeline-item timeline-item-transparent">
            <span class="timeline-point timeline-point-warning"></span>
            <div class="timeline-event">
              <div class="timeline-header mb-1">
                <h6 class="mb-0">جلسه مشتری</h6>
                <small class="text-muted">45 دقیقه پیش</small>
              </div>
              <p class="mb-2">جلسه پروژه با نـوید در ساعت 10:15 صبح</p>
              <div class="d-flex flex-wrap">
                <div class="avatar me-3">
                  <img src="~/img/avatars/3.png" alt="Avatar" class="rounded-circle" />
                </div>
                <div>
                  <h6 class="mb-0">امیر جدیدی (مشتری)</h6>
                  <small>مدیرعامل @TempData.Peek("authorName")</small>
                </div>
              </div>
            </div>
          </li>
          <li class="timeline-item timeline-item-transparent">
            <span class="timeline-point timeline-point-info"></span>
            <div class="timeline-event">
              <div class="timeline-header mb-1">
                <h6 class="mb-0">یک پروژه جدید برای مشتری ایجاد کنید</h6>
                <small class="text-muted">2 روز پیش</small>
              </div>
              <p class="mb-2">۵ نفر عضو</p>
              <div class="d-flex align-items-center avatar-group">
                <div class="avatar pull-up" data-bs-placement="top" data-bs-toggle="tooltip" data-popup="tooltip-custom" title="مهرداد محمدی">
                  <img src="~/img/avatars/5.png" alt="Avatar" class="rounded-circle">
                </div>
                <div class="avatar pull-up" data-bs-placement="top" data-bs-toggle="tooltip" data-popup="tooltip-custom" title="لاله اسکندری">
                  <img src="~/img/avatars/12.png" alt="Avatar" class="rounded-circle">
                </div>
                <div class="avatar pull-up" data-bs-placement="top" data-bs-toggle="tooltip" data-popup="tooltip-custom" title="حمید فرخ نژاد">
                  <img src="~/img/avatars/9.png" alt="Avatar" class="rounded-circle">
                </div>
                <div class="avatar pull-up" data-bs-placement="top" data-bs-toggle="tooltip" data-popup="tooltip-custom" title="بهاره کیان‌افشار">
                  <img src="~/img/avatars/6.png" alt="Avatar" class="rounded-circle">
                </div>
                <div class="avatar pull-up" data-bs-placement="top" data-bs-toggle="tooltip" data-popup="tooltip-custom" title="ترلان پروانه">
                  <img src="~/img/avatars/4.png" alt="Avatar" class="rounded-circle">
                </div>
              </div>
            </div>
          </li>
          <li class="timeline-item timeline-item-transparent border-transparent">
            <span class="timeline-point timeline-point-success"></span>
            <div class="timeline-event">
              <div class="timeline-header mb-1">
                <h6 class="mb-0"> پروژه فروشگاه اینترنتی برای مشتری</h6>
                <small class="text-muted">5 روز پیش</small>
              </div>
              <p class="mb-0">طراحی صفحه داشبورد مشتریان</p>
            </div>
          </li>
        </ul>
      </div>
    </div>
    <!-- /Activity Timeline -->

    <!-- Invoice table -->
    <div class="card mb-4">
      <div class="table-responsive mb-3">
        <table class="table datatable-invoice border-top">
          <thead>
          <tr>
            <th></th>
            <th>شناسه</th>
            <th>
              <i class="ti ti-trending-up text-secondary"></i>
            </th>
            <th>جمع</th>
            <th>تاریخ صدور</th>
            <th>عملیات</th>
          </tr>
          </thead>
        </table>
      </div>
    </div>
    <!-- /Invoice table -->
  </div>
  <!--/ User Content -->
</div>


<!-- Modal -->
@await Html.PartialAsync("../_Partials/_Modals/ModalEditUser")
@await Html.PartialAsync("../_Partials/_Modals/ModalUpgradePlan")
<!-- /Modal -->
