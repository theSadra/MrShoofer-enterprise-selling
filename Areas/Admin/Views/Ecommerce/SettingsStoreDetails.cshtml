@{
  ViewData["Title"] = "تجارت الکترونیک - تنظیمات - جزئیات فروشگاه";
}

@section VendorStyles {
<link rel="stylesheet" href="~/vendor/libs/select2/select2.css" />
}

@section VendorScripts {
<script src="~/vendor/libs/cleavejs/cleave.js"></script>
<script src="~/vendor/libs/cleavejs/cleave-phone.js"></script>
<script src="~/vendor/libs/select2/select2.js"></script>
<script src="~/vendor/libs/select2/i18n/fa.js"></script>
}

@section PageScripts {
<script src="~/js/app-ecommerce-settings.js"></script>
}

@* ************** Content ************** *@

<h4 class="py-3 mb-4">
  <span class="text-muted fw-light">تجارت الکترونیک /</span>
  تنظیمات فروشگاه
</h4>

<div class="row g-4">

  <!-- Navigation -->
  <div class="col-12 col-lg-4">
    <div class="d-flex justify-content-between flex-column mb-3 mb-md-0">
      <ul class="nav nav-align-left nav-pills flex-column">
        <li class="nav-item mb-1">
          <a class="nav-link py-2 active" href="javascript:void(0);">
            <i class="ti ti-building-store me-2"></i>
            <span class="align-middle">جزئیات فروشگاه</span>
          </a>
        </li>
        <li class="nav-item mb-1">
          <a class="nav-link py-2" href="SettingsPayments">
            <i class="ti ti-credit-card me-2"></i>
            <span class="align-middle">سیستم پرداخت</span>
          </a>
        </li>
        <li class="nav-item mb-1">
          <a class="nav-link py-2" href="SettingsCheckout">
            <i class="ti ti-shopping-cart me-2"></i>
            <span class="align-middle">ثبت سفارش</span>
          </a>
        </li>
        <li class="nav-item mb-1">
          <a class="nav-link py-2" href="SettingsShipping">
            <i class="ti ti-discount-2 me-2"></i>
            <span class="align-middle">ارسال و تحویل</span>
          </a>
        </li>
        <li class="nav-item mb-1">
          <a class="nav-link py-2" href="SettingsLocations">
            <i class="ti ti-map-pin me-2"></i>
            <span class="align-middle">آدرس فروشگاه</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link py-2" href="SettingsNotifications">
            <i class="ti ti-bell-ringing me-2"></i>
            <span class="align-middle">نوتیفیکیشن</span>
          </a>
        </li>
      </ul>
    </div>
  </div>
  <!-- /Navigation -->

  <!-- Options -->
  <div class="col-12 col-lg-8 pt-4 pt-lg-0">

    <div class="tab-content p-0">
      <!-- Store Details Tab -->
      <div class="tab-pane fade show active" id="store_details" role="tabpanel">
        <div class="card mb-4">
          <div class="card-header">
            <h5 class="card-title m-0">مشخصات فروشگاه</h5>
          </div>
          <div class="card-body">
            <div class="row mb-3 g-3">
              <div class="col-12 col-md-6">
                <label class="form-label mb-0" for="ecommerce-settings-details-name">نام فروشگاه</label>
                <input aria-label="جزئیات تنظیمات" class="form-control" id="ecommerce-settings-details-name" name="settingsDet" placeholder="نوید محمدزاده" type="text"/>
              </div>
              <div class="col-12 col-md-6">
                <label class="form-label mb-0" for="ecommerce-settings-details-phone">تلفن</label>
                <input aria-label="تلفن" class="form-control phone-mask" id="ecommerce-settings-details-phone" name="phone" placeholder="(031) 0000 0000" type="tel"/>
              </div>
              <div class="col-12 col-md-6">
                <label class="form-label mb-0" for="ecommerce-settings-details-email">ایمیل فروشگاه</label>
                <input aria-label="ایمیل" class="form-control" id="ecommerce-settings-details-email" name="email" placeholder="johndoe@gmail.com" type="email"/>
              </div>
              <div class="col-12 col-md-6">
                <label class="form-label mb-0" for="ecommerce-settings-sender-email">ایمیل ارتباط با مشتری</label>
                <input aria-label="ایمیل فرستنده" class="form-control" id="ecommerce-settings-sender-email" name="sender_email" placeholder="johndoe@gmail.com" type="email"/>
              </div>
            </div>
            <div class="alert d-flex align-items-center bg-label-warning mb-0" role="alert">
              <span class="alert-icon text-warning me-2 bg-label-light px-2 pb-2 rounded-2">
                <i class="ti ti-bell ti-xs mt-1"></i>
              </span>
              با ارسال کد و تایید به johndoe@gmail.com مطمئن می شویم که به آن دسترسی دارید.
            </div>
          </div>
        </div>
        <div class="card mb-4">
          <div class="card-header">
            <h5 class="card-title m-0">اطلاعات صورتحساب</h5>
          </div>
          <div class="card-body">
            <div class="row g-3">
              <div class="col-12 col-md-6">
                <label class="form-label mb-0" for="business-name">نام شرکت</label>
                <input class="form-control" id="business-name" placeholder="نام کسب و کار" type="text"/>
              </div>
              <div class="col-12 col-md-6">
                <label class="form-label mb-0" for="country_region">کشور</label>
                <select class="select2 form-select" data-placeholder="ایران" id="country_region">
                  <option value="">ایالات متحده</option>
                  <option value="Australia">استرالیا</option>
                  <option value="Bangladesh">بنگلادش</option>
                  <option value="Belarus">بلاروس</option>
                  <option value="Brazil">برزیل</option>
                  <option value="Canada">کانادا</option>
                  <option value="China">چین</option>
                  <option value="France">فرانسه</option>
                  <option value="Germany">آلمان</option>
                  <option value="India">هندوستان</option>
                  <option value="Indonesia">اندونزی</option>
                  <option value="Israel">اسرائيل</option>
                  <option value="Italy">ایتالیا</option>
                  <option value="Japan">ژاپن</option>
                  <option value="Korea">جمهوری کره</option>
                  <option value="Mexico">مکزیک</option>
                  <option value="Philippines">فیلیپین</option>
                  <option value="Russia">فدراسیون روسیه</option>
                  <option value="South Africa">آفریقای جنوبی</option>
                  <option value="Thailand">تایلند</option>
                  <option value="Turkey">ترکیه</option>
                  <option value="Ukraine">اوکراین</option>
                  <option value="United Arab Emirates">امارات متحده عربی</option>
                  <option value="United Kingdom">انگلستان</option>
                  <option value="United States">ایالات متحده</option>
                </select>
              </div>
              <div class="col-12 col-md-6">
                <label class="form-label mb-0" for="bill_address">آدرس</label>
                <input class="form-control" id="bill_address" placeholder="تهران ، فرشته ...." type="text"/>
              </div>
              <div class="col-12 col-md-6">
                <label class="form-label mb-0" for="apa_suite">نوع ساختمان</label>
                <input class="form-control" id="apa_suite" placeholder="آپارتمان، سوئیت و غیره" type="text"/>
              </div>
              <div class="col-12 col-md-4">
                <label class="form-label mb-0" for="bill_city">شهر</label>
                <input class="form-control" id="bill_city" placeholder="ری ..." type="text"/>
              </div>
              <div class="col-12 col-md-4">
                <label class="form-label mb-0" for="bill_state">استان</label>
                <input class="form-control" id="bill_state" placeholder="تهران ..." type="text"/>
              </div>
              <div class="col-12 col-md-4">
                <label class="form-label mb-0" for="bill_pincode">کد پستی</label>
                <input class="form-control" id="bill_pincode" max="999999" min="0" placeholder="1234" type="number"/>
              </div>
            </div>
          </div>
        </div>
        <div class="card mb-4">
          <div class="card-header">
            <div class="card-title mb-0">
              <h5 class="m-0 mb-1">منطقه زمانی و واحدهای اندازه گیری</h5>
              <p class="text-muted mb-0"> برای محاسبه قیمت محصول، وزن حمل و نقل و زمان سفارش استفاده می شود.</p>
            </div>
          </div>
          <div class="card-body">
            <div class="row g-3">
              <div class="col-12">
                <label class="form-label mb-0" for="timeZones">منطقه زمانی</label>
                <select class="select2 form-select" data-placeholder="(GMT-12:00) International Date Line West" id="timeZones">
                  <option value="">(GMT-12:00) خط تاریخ بین المللی غرب</option>
                  <option value="-12">(GMT-12:00) خط تاریخ بین المللی غرب</option>
                  <option value="-11">(GMT-11:00) جزیره میدوی، ساموآ</option>
                  <option value="-10">(GMT-10:00) هاوایی</option>
                  <option value="-9">(GMT-09:00) آلاسکا</option>
                  <option value="-8">(GMT-08:00) به وقت اقیانوس آرام (ایالات متحده و کانادا)</option>
                  <option value="-8">(GMT-08:00) تیجوانا، باخا کالیفرنیا</option>
                  <option value="-7">(GMT-07:00) آریزونا</option>
                  <option value="-7">(GMT-07:00) چیهواهوا، لاپاز، مازاتلان</option>
                  <option value="-7">(GMT-07:00) به وقت کوهستان (ایالات متحده و کانادا)</option>
                  <option value="-6">(GMT-06:00) آمریکای مرکزی</option>
                  <option value="-6">(GMT-06:00) به وقت مرکزی (ایالات متحده و کانادا)</option>
                  <option value="-6">(GMT-06:00) گوادالاخارا، مکزیکو سیتی، مونتری</option>
                  <option value="-6">(GMT-06:00) ساسکاچوان</option>
                  <option value="-5">(GMT-05:00) بوگوتا، لیما، کیتو، ریو برانکو</option>
                  <option value="-5">(GMT-05:00) به وقت شرقی (ایالات متحده و کانادا)</option>
                  <option value="-5">(GMT-05:00) ایندیانا (شرق)</option>
                  <option value="-4">(GMT-04:00) به وقت اقیانوس اطلس (کانادا)</option>
                  <option value="-4">(GMT-04:00) کاراکاس، لاپاز</option>
                </select>
              </div>
              <div class="col-12 col-md-6">
                <label class="form-label mb-0" for="unitSystemDropdown">سیستم واحد</label>
                <select class="select2 form-select" data-placeholder="سیستم بین المللی" id="unitSystemDropdown">
                  <option value="">متریک</option>
                  <option value="metric">metric</option>
                  <option value="imperial">imperial</option>
                  <option value="us">us</option>
                  <option value="si">سیستم بین المللی</option>
                </select>
              </div>
              <div class="col-12 col-md-6">
                <label class="form-label mb-0" for="weightUnits">واحد وزن پیش فرض</label>
                <select class="select2 form-select" data-placeholder="کیلوگرم" id="weightUnits">
                  <option value="">...</option>
                  <option value="kg">کیلوگرم</option>
                  <option value="lb">پوند</option>
                  <option value="g">گرم</option>
                  <option value="mg">میلی گرم</option>
                </select>
              </div>
            </div>
          </div>
        </div>
        <div class="card mb-4">
          <div class="card-header">
            <div class="card-title mb-0">
              <h5 class="m-0 mb-1">واحد ارز</h5>
              <p class="text-muted mb-0">ارزی که محصولات شما با آن فروخته می شود.</p>
            </div>
          </div>
          <div class="card-body">
            <div>
              <label class="form-label mb-0" for="currency-store">واحد پول</label>
              <select class="select2 form-select" data-placeholder="واحد پول فروشگاه" id="currency-store">
                <option value="">انتخاب ...</option>
                <option value="IRT">ءتء</option>
                <option value="IRR">ءرء</option>
                <option value="usd">USD</option>
                <option value="euro">یورو</option>
                <option value="pound">پوند</option>
                <option value="bitcoin">بیت کوین</option>
              </select>
            </div>
          </div>
        </div>
        <div class="card mb-4">
          <div class="card-header">
            <div class="card-title mb-0">
              <h5 class="m-0 mb-1">فرمت کد سفارشات</h5>
              <p class="text-muted mb-0"> در صفحه سفارشات، صفحات مشتری و اعلان های سفارش مشتری برای شناسایی سفارش ها نشان داده شده است.</p>
            </div>
          </div>
          <div class="card-body">
            <div class="row mb-3 g-3">
              <div class="col-12 col-md-6">
                <label class="form-label mb-0" for="ecommerce-settings-details-prefix">پیشوند</label>
                <div class="input-group input-group-merge">
                  <span class="input-group-text text-muted">#</span>
                  <input aria-label="پیشوند" class="form-control" id="ecommerce-settings-details-prefix" min="0" name="prefix" type="number"/>
                </div>
                <p class="text-muted mb-0 pt-2">شناسه سفارش شما به صورت #1001، #1002، #1003 ظاهر می شود.</p>
              </div>
              <div class="col-12 col-md-6">
                <label class="form-label mb-0" for="ecommerce-settings-sender-suffix">پسوند</label>
                <input aria-label="Suffix" class="form-control" id="ecommerce-settings-sender-suffix" name="suffix" type="text"/>
              </div>
            </div>
          </div>
        </div>
        <div class="d-flex justify-content-end gap-3">
          <button class="btn btn-label-secondary waves-effect" type="reset">صرف نظر</button>
          <a class="btn btn-primary" href="SettingsPayments">اعمال تغییرات</a>
        </div>

      </div>
    </div>

  </div>
  <!-- /Options-->
</div>
