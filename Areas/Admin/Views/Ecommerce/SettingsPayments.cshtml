@{
  ViewData["Title"] = "تجارت الکترونیک - تنظیمات - سیستم پرداخت";
}

@section PageScripts {
<script src="~/js/app-ecommerce-settings.js"></script>
}

@* ************** Content ************** *@

<h4 class="py-3 mb-4">
  <span class="text-muted fw-light">تجارت الکترونیک /</span>
  تنظیمات فروشگاه
</h4>

<div class="row g-4">

  <!-- Navigation -->
  <div class="col-12 col-lg-4">
    <div class="d-flex justify-content-between flex-column mb-3 mb-md-0">
      <ul class="nav nav-align-left nav-pills flex-column">
        <li class="nav-item mb-1">
          <a class="nav-link py-2" href="SettingsStoreDetails">
            <i class="ti ti-building-store me-2"></i>
            <span class="align-middle">جزئیات فروشگاه</span>
          </a>
        </li>
        <li class="nav-item mb-1">
          <a class="nav-link py-2 active" href="javascript:void(0);">
            <i class="ti ti-credit-card me-2"></i>
            <span class="align-middle">سیستم پرداخت</span>
          </a>
        </li>
        <li class="nav-item mb-1">
          <a class="nav-link py-2" href="SettingsCheckout">
            <i class="ti ti-shopping-cart me-2"></i>
            <span class="align-middle">ثبت سفارش</span>
          </a>
        </li>
        <li class="nav-item mb-1">
          <a class="nav-link py-2" href="SettingsShipping">
            <i class="ti ti-discount-2 me-2"></i>
            <span class="align-middle">ارسال و تحویل</span>
          </a>
        </li>
        <li class="nav-item mb-1">
          <a class="nav-link py-2" href="SettingsLocations">
            <i class="ti ti-map-pin me-2"></i>
            <span class="align-middle">آدرس فروشگاه</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link py-2" href="SettingsNotifications">
            <i class="ti ti-bell-ringing me-2"></i>
            <span class="align-middle">نوتیفیکیشن</span>
          </a>
        </li>
      </ul>
    </div>
  </div>
  <!-- /Navigation -->
  <!-- Options -->
  <div class="col-12 col-lg-8 pt-4 pt-lg-0">
    <div class="tab-content p-0">
      <!-- Payments Tab -->
      <div class="tab-pane fade show active" id="payments" role="tabpanel">
        <div class="card mb-4">
          <div class="card-header">
            <h5 class="card-title m-0">درگاه های پرداخت</h5>
          </div>
          <div class="card-body">
            <p> ارائه دهندگانی که به شما امکان می دهند روش های پرداخت را با نرخ تعیین شده توسط شخص ثالث بپذیرید.
              <br/>
              پس از انتخاب طرح، هزینه اضافی برای سفارش‌های جدید اعمال می‌شود
            </p>
            <button class="btn btn-label-primary" data-bs-target="#paymentProvider" data-bs-toggle="modal"> انتخاب درگاه</button>
          </div>
        </div>
        <div class="card mb-4">
          <div class="card-header">
            <div class="card-title m-0">
              <h5 class="m-0 mb-1">روش های پرداخت موجود</h5>
              <p class="text-muted mb-0"> روش های پرداختی که با یکی از ارائه دهندگان پرداخت تایید شده Vuexy در دسترس است.</p>
            </div>
          </div>
          <div class="card-body">
            <h6 class="mb-3">پیش فرض</h6>
            <div class="row mb-3 g-3 bg-label-secondary px-4 pt-2 rounded-2 mx-0 mt-0">
              <div class="col-12 d-flex justify-content-between align-items-start border-bottom p-0 pb-2">
                <img alt="پی پال" src="~/img/icons/payments/paypal.png" width="60"/>
                <span>
                  <a href="javascript:void(0);">فعالسازی</a>
                </span>
              </div>
              <div class="col-12 p-0">
                <div class="row">
                  <div class="col-4">
                    <p class="mb-1">ارائه دهنده</p>
                    <p class="text-body fw-medium">پی پال</p>
                  </div>
                  <div class="col-4">
                    <p class="mb-1">وضعیت</p>
                    <p class="badge bg-label-warning fw-medium">غیر فعال</p>
                  </div>
                  <div class="col-4">
                    <p class="mb-1">هزینه معامله</p>
                    <p class="text-body fw-medium">2.99%</p>
                  </div>
                </div>
              </div>
            </div>
            <button class="btn btn-label-primary" data-bs-target="#paymentMethods" data-bs-toggle="modal"> افزودن درگاه جدید</button>
          </div>
        </div>
        <div class="card mb-4">
          <div class="card-header">
            <h5 class="card-title m-0">روش های پرداخت دستی</h5>
          </div>
          <div class="card-body">
            <p> پرداخت هایی که خارج از فروشگاه آنلاین شما انجام می شود. وقتی مشتری یک روش پرداخت دستی مانند پول نقد هنگام تحویل را انتخاب می کند. قبل از انجام سفارش، باید سفارش آنها را تأیید کنید.</p>
            <div class="btn-group">
              <button aria-expanded="false" class="btn btn-label-primary dropdown-toggle" data-bs-toggle="dropdown" type="button">
                انتخاب روش آفلاین
              </button>
              <ul class="dropdown-menu">
                <li>
                  <a class="dropdown-item" href="javascript:void(0);">ارسال رسید واریز</a>
                </li>
                <li>
                  <a class="dropdown-item" href="javascript:void(0);">سپرده بانکی</a>
                </li>
                <li>
                  <a class="dropdown-item" href="javascript:void(0);">حواله پول</a>
                </li>
                <li>
                  <a class="dropdown-item" href="javascript:void(0);">نقدی هنگام تحویل (COD)</a>
                </li>
              </ul>
            </div>
          </div>
        </div>
        <div class="d-flex justify-content-end gap-3">
          <button class="btn btn-label-secondary waves-effect" type="reset">صرف نظر</button>
          <a class="btn btn-primary waves-effect waves-light" href="SettingsCheckout">اعمال تغییرات</a>
        </div>
      </div>
    </div>
  </div>
  <!-- /Options-->
</div>

@await Html.PartialAsync("../_Partials/_Modals/ModalSelectPaymentProviders")
@await Html.PartialAsync("../_Partials/_Modals/ModalSelectPaymentMethods")
