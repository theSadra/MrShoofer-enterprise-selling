@{
  ViewData["Title"] = "جداول داده‌ای - پیشرفته";
}

@section VendorStyles {
<link rel="stylesheet" href="~/vendor/libs/datatables-bs5/datatables.bootstrap5.css">
<link rel="stylesheet" href="~/vendor/libs/datatables-responsive-bs5/responsive.bootstrap5.css">
<link rel="stylesheet" href="~/vendor/libs/flatpickr/flatpickr.css" />
}

@section VendorScripts {
<script src="~/vendor/libs/datatables-bs5/datatables-bootstrap5.js"></script>
<script src="~/vendor/libs/datatables-bs5/i18n/fa.js"></script>
<!-- Flat Picker -->
<script src="~/vendor/libs/moment/moment.js"></script>
<script src="~/vendor/libs/jdate/jdate.min.js"></script>
<script src="~/vendor/libs/flatpickr/flatpickr-jdate.js"></script>
<script src="~/vendor/libs/flatpickr/l10n/fa.js"></script>
}

@section PageScripts {
<script src="~/js/tables-datatables-advanced.js"></script>
}

@* ************** Content ************** *@
<h4 class="py-3 mb-4">
  <span class="text-muted fw-light">جداول داده‌ای /</span>
  پیشرفته
</h4>
<!-- Ajax Sourced Server-side -->
<div class="card">
  <h5 class="card-header">جدول با داده Ajax سمت سرور</h5>
  <div class="card-datatable text-nowrap">
    <table class="datatables-ajax table">
      <thead>
      <tr>
        <th>نام و نام خانوادگی</th>
        <th>موقعیت</th>
        <th>ایمیل</th>
        <th>دفتر</th>
        <th>تاریخ شروع</th>
        <th>حقوق</th>
      </tr>
      </thead>
    </table>
  </div>
</div>
<!--/ Ajax Sourced Server-side -->
<hr class="my-5"/>
<!-- Column Search -->
<div class="card">
  <h5 class="card-header">جستجوی در ستون‌ها</h5>
  <div class="card-datatable text-nowrap">
    <table class="dt-column-search table">
      <thead>
      <tr>
        <th>نام</th>
        <th>ایمیل</th>
        <th>پست</th>
        <th>شهر</th>
        <th>تاریخ</th>
        <th>حقوق</th>
      </tr>
      </thead>
      <tfoot>
      <tr>
        <th>نام</th>
        <th>ایمیل</th>
        <th>پست</th>
        <th>شهر</th>
        <th>تاریخ</th>
        <th>حقوق</th>
      </tr>
      </tfoot>
    </table>
  </div>
</div>
<!--/ Column Search -->
<hr class="my-5"/>
<!-- Advanced Search -->
<div class="card">
  <h5 class="card-header">جستجوی پیشرفته</h5>
  <!--Search Form -->
  <div class="card-body">
    <form class="dt_adv_search" method="GET">
      <div class="row">
        <div class="col-12">
          <div class="row g-3">
            <div class="col-12 col-sm-6 col-lg-4">
              <label class="form-label">نام:</label>
              <input class="form-control dt-input dt-full-name" data-column="1" data-column-index="0" placeholder="سهیل" type="text"/>
            </div>
            <div class="col-12 col-sm-6 col-lg-4">
              <label class="form-label">ایمیل:</label>
              <input class="form-control dt-input" data-column="2" data-column-index="1" placeholder="demo&#64;example.com" type="text"/>
            </div>
            <div class="col-12 col-sm-6 col-lg-4">
              <label class="form-label">پست:</label>
              <input class="form-control dt-input" data-column="3" data-column-index="2" placeholder="طراح وب" type="text"/>
            </div>
            <div class="col-12 col-sm-6 col-lg-4">
              <label class="form-label">شهر:</label>
              <input class="form-control dt-input" data-column="4" data-column-index="3" placeholder="کاشان" type="text"/>
            </div>
            <div class="col-12 col-sm-6 col-lg-4">
              <label class="form-label">تاریخ:</label>
              <div class="mb-0">
                <input class="form-control dt-date flatpickr-range dt-input" data-column="5" data-column-index="4" name="dt_date" placeholder="تاریخ شروع تا پایان" type="text"/>
                <input class="form-control dt-date start_date dt-input" data-column="5" data-column-index="4" name="value_from_start_date" type="hidden"/>
                <input class="form-control dt-date end_date dt-input" data-column="5" data-column-index="4" name="value_from_end_date" type="hidden"/>
              </div>
            </div>
            <div class="col-12 col-sm-6 col-lg-4">
              <label class="form-label">حقوق:</label>
              <input class="form-control dt-input" data-column="6" data-column-index="5" placeholder="10000" type="text"/>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
  <hr class="mt-0"/>
  <div class="card-datatable table-responsive">
    <table class="dt-advanced-search table">
      <thead>
      <tr>
        <th></th>
        <th>نام</th>
        <th>ایمیل</th>
        <th>پست</th>
        <th>شهر</th>
        <th>تاریخ</th>
        <th>حقوق</th>
      </tr>
      </thead>
      <tfoot>
      <tr>
        <th></th>
        <th>نام</th>
        <th>ایمیل</th>
        <th>پست</th>
        <th>شهر</th>
        <th>تاریخ</th>
        <th>حقوق</th>
      </tr>
      </tfoot>
    </table>
  </div>
</div>
<!--/ Advanced Search -->
<hr class="my-5"/>
