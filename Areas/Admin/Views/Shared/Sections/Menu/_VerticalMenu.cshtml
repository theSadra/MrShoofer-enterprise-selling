@{
	TempData.Keep();

	string? currentPage = ViewContext.HttpContext.Request.Path;
}

<!-- Menu -->
@* ! Do this simple *@
<aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">

	@* ! Hide app brand if navbar-full *@
  <div class='app-brand demo @((@ViewData["navbarFull"] != null && Convert.ToBoolean(@ViewData["navbarFull"])) ? "d-xl-none" : "")'>
	<a asp-controller="Home" asp-action="Index" class="app-brand-link">
	  <span class="app-brand-logo demo">
		 <img height="30" src="/logo_mini.png" />
	  </span>
	  	  <span class="app-brand-text demo menu-text fw-bold">مسترشوفر</span>
	</a>

	<a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto">
	  <i class="ti menu-toggle-icon d-none d-xl-block ti-sm align-middle"></i>
	  <i class="ti ti-x d-block d-xl-none ti-sm align-middle"></i>
	</a>
  </div>

  <div class="menu-inner-shadow"></div>

	@* ! Starter Kit menu-items *@

	  <ul class="menu-inner py-1">
	<!-- Dashboards -->
	<li class='menu-item@(currentPage.EndsWith("/") || currentPage.StartsWith("/Dashboards")? " active open" : "")'>
	  <a href="javascript:void(0);" class="menu-link menu-toggle">
		<i class="menu-icon tf-icons ti ti-smart-home"></i>
		<div >فروشندگان</div>
		<div class="badge bg-primary rounded-pill ms-auto">5</div>
	  </a>
	  <ul class="menu-sub">
		<li class='menu-item@(currentPage == "/" ? " active" : "")'>
		  <a asp-controller="Dashboards" asp-action="Index" class="menu-link">
			<div data-i18n="Analytics">آمار و گزارشات</div>
		  </a>
		</li>
		<li class='menu-item@(currentPage == "/Dashboards/CRM" ? " active" : "")'>
		  <a asp-controller="Dashboards" asp-action="CRM" class="menu-link">
			<div data-i18n="CRM">ارتباط با مشتری (CRM)</div>
		  </a>
		</li>
		<li class='menu-item@(currentPage == "/Ecommerce/Dashboard" ? " active" : "")'>
		  <a asp-controller="Ecommerce" asp-action="Dashboard" class="menu-link">
			<div data-i18n="eCommerce">تجارت الکترونیک</div>
		  </a>
		</li>
		<li class='menu-item@(currentPage == "/Logistics/Dashboard" ? " active" : "")'>
		  <a asp-controller="Logistics" asp-action="Dashboard" class="menu-link">
			<div data-i18n="Logistics">حمل و نقل</div>
		  </a>
		</li>
		<li class='menu-item@(currentPage == "/Academy/Dashboard" ? " active" : "")'>
		  <a asp-controller="Academy" asp-action="Dashboard" class="menu-link">
			<div data-i18n="Academy">آکادمی</div>
		  </a>
		</li>
	  </ul>



  <ul class="menu-inner py-1">
	<li class='menu-item@(currentPage == "/" ? " active" : "")'>
	  <a asp-controller="Home" asp-action="Index" class="menu-link">
		<i class="menu-icon tf-icons ti ti-smart-home"></i>
		<div data-i18n="Home">خانه</div>
	  </a>
	</li>
	<li class='menu-item@(currentPage == "/Page2" ? " active" : "")'>
	  <a asp-controller="Page2" asp-action="Index" class="menu-link">
		<i class="menu-icon tf-icons ti ti-app-window"></i>
		<div data-i18n="Page 2">صفحه دوم</div>
	  </a>
	</li>
  </ul>

</aside>
<!-- / Menu -->
