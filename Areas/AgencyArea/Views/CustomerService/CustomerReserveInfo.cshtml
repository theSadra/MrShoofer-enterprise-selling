<div class="main_container px-lg-6 px-0 mt-5" style="flex-wrap : wrap;">
    <div class="bg-white rounded-5 border-1 border-divider w-full rounded-3xl py-7.5 px-14 shadow-1__2__gray/75 " style="display: flex; justify-content: center;">

        <div class="d-flex steps">
            <div class="step-container">
                <div class="step">
                    <i class="ti ti-checks ti-lg px-4 d:pb-4 text-success"></i>

                    @* <img src="/ok.png" height="40px;" /> *@
                    <span class="pt-1 step-title">
                       اطلاعات
                    </span>
                </div>
                <div class="h-[0.063rem] flex-1  bg-divider"></div>
            </div>

            <div class="step-container">
                <div class="step">
                    <i class="ti ti-checks ti-lg px-4 d:pb-4 text-success"></i>
                    <span class="pt-1 step-title ">
                        رزور و تایید
                    </span>
                </div>
                <div class="h-[0.063rem] flex-1  bg-divider"></div>
            </div>

            <div class="step-container">
                <div class="step">
                    <i class="ti ti-checks ti-lg px-4 d:pb-4 text-success"></i>
                    <span class="pt-1 step-title">
                        پرداخت
                    </span>
                </div>
                <div class="h-[0.063rem] flex-1  bg-divider"></div>
            </div>

            <div class="step-container selected" style="flex: none;">
                <div class="step">
                    <i class="ti ti-ticket ti-lg px-4 d:pb-4 text-danger"></i>
                    <span class="pt-1 step-title">
                        صدور
                    </span>
                </div>
            </div>
        </div>

    </div>

    <div class="downside-contaner mt-3 pt-2 row px-lg-5">
        <div class="mb-0 px-0 d-flex row justify-content-between" style="justify-content: space-between;">

            <div class="col-12 col-md-3 d-flex justify-content-center me-0">
              <img src="/logo_full_b.png" height="50px" />
            </div>

            <div class="d-flex col-md-3 col-12 pe-0 mt-3 mt-md-0" style="flex-direction: column; align-items: center; text-align: center;">
                <span class="fs-3 font-bold d-block" style="line-height: 2rem; --tw-text-opacity: 1; color: rgb(41 38 61 / var(--tw-text-opacity));">ثـبت موفقیت آمیـز</span>
                <small class="mt-2">سفر شما با موفقیت ثبت شد</small>
                <small class="ps-1">با تشکر از خرید شما، مسترشوفر سفر خوشی را برای شما آروز می‌کند</small>
            </div>




            <div class="col-md-3 mt-md-0 col-12 d-flex justify-content-end mt-3">
                <div>

                    <button class="btn rounded-pill btn-icon btn-label-secondary waves-effect" type="button">
                        <span class="ti ti-share-2"></span>
                    </button>
                    <a href="/TripReceiptPdf?reference=@ticket.TicketCode" class="btn rounded-pill btn-icon btn-label-primary " type="button">
                        <span class="ti ti-printer"></span>
                    </a>

                </div>
            </div>
        </div>   

        <div class="col-12 m-0 px-3">

            <div class="card rounded-5 p-3 col-12 mt-4">

                <div class="headline d-flex justify-between">
                    <span class="badge bg-dark rounded-pill py-2" style="font-size: .875rem!important">
                        @trip.taxiSupervisorName
                    </span>
                    <div class="capacity badge bg-label-secondary rounded-pill">
                        <i class="ti ti-armchair-2 d-inline"></i>
                        |
                        @* <span class="badge bg-label-danger">دربتسی</span> *@
                        <small class="text-danger ms-1 d-inline t-bold">دربستی</small>
                    </div>
                </div>


                <div class="ms-4 mt-4 d-flex" style="flex-direction: column;">
                    <span>
                        <strong>
                            رفرنس : @ticket.TicketCode
                        </strong>
                    </span>

                    @* <small>
                        کد سفر : @ticket.Tripcode
                    </small> *@
                </div>

                @* مبدا و مقصد *@

                <div class="mx-lg-5 px-lg-5 mt-2">

                    <div class="mt pt-3 col-12 d-flex px-md-5 px-1 m-2" style="justify-content: space-between;">
                        <span>
                            <small class="d-block ms-1 ">
                                <img src="/redpin.png" height="18px;" />
                                مبدا
                            </small>
                            <span class="text-blck fs-4 text-bold fw-bold">
                                @trip.originCityName
                            </span>
                            <small>
                                @trip.oringinLocationName
                            </small>
                        </span>

                        <span style="align-self: end;" class="mb-1">
                            <span>
                                ....
                            </span>
                            <img src="/taxi.png" height="30px" />
                            <span>
                                ....
                            </span>
                        </span>

                        <span>
                            <small class="d-block ms-1">
                                <img src="/redpin.png" height="18px;" />
                                مقصد
                            </small>
                            <span class="text-blck fs-4 text-bold fw-bold">
                                @trip.destinationCityName
                            </span>
                            <small>
                                @trip.destinationLocationName
                            </small>
                        </span>
                    </div>
                </div>

                <hr />
                @* تاریخ و خودرو *@


                <div class="col-12 d-flex px-3 align-items-center">

                    <div class="col-4 d-flex flex-column align-items-center">

                        <small>
                            <i class="ti ti-calendar-event"></i>
                            تاریخ سفر
                        </small>

                        <div class="d-flex mt-1" style="justify-content: space-between;">
                            @{
                                var pdate = new Application.Services.PersianDate(trip.startingDateTime);
                            }

                            <div>
                                <span class="text-blck fs-5">
                                    @pdate.Day
                                    @monthName[pdate.Month]
                                </span>
                                <span class="fs-5 ms-1">
                                    @pdate.DayOfWeek
                                </span>

                            </div>
                        </div>
                        <div>
                            @pdate.ToShortDateString()
                        </div>
                    </div>


                    <div class="col-4 d-flex flex-column align-items-center">
                        <small>
                            <i class="ti ti-clock"></i>
                            ساعت
                        </small>

                        <span class="text-blck fs-5 mt-1">
                            @trip.startingDateTime.ToString("HH:mm")
                            @{
                                if (trip.startingDateTime.Hour >= 0 && trip.startingDateTime.Hour <= 11)
                                {
                                    <small>(صبح)</small>
                                }

                                else if (trip.startingDateTime.Hour >= 12 && trip.startingDateTime.Hour < 15)
                                {
                                    <small>(ظهر)</small>
                                }

                                else if (trip.startingDateTime.Hour >= 15 && trip.startingDateTime.Hour <= 19)
                                {
                                    <small>(بعداز ظهر)</small>
                                }

                                else
                                {
                                    <small>(شب)</small>

                                }

                            }
                        </span>
                    </div>

                    <div class="col-4 d-flex flex-column align-items-center">
                        <small>
                            <i class="ti ti-car"></i>
                            خودرو
                            @if (trip.taxiSupervisorID == 7)
                            {
                                <img src="/vip_badge.png" style="height:27px;">
                            }
                        </small>

                        <span class="text-blck fs-5">
                            <div class="d-flex mt-1" style="justify-content: space-between; font-size: 1rem;">
                                <span>
                                    <span class="text-blck badge bg-label-primary rounded-pill carmodel">
                                        @trip.carModelName
                                    </span>
                                </span>
                            </div>
                        </span>
                    </div>
                </div>
                <hr />

                <div class="ms-4 mt-2">

                    <h3 class="mb-0">اطلاعات مسافر</h3>
                    <small>سرپرست مسافرین</small>
                    <div class=" p-3 mt-0">
                        <div class="row">
