                url: '/Message',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({ name: name, number: number, message: message }),

                success: function (response) {
                    Swal.fire({
                        title: 'پیام شما ثبت شد',
                        text: 'با تشکر از شما، پیام شما در اسرع وقت و با ارجعیت، توسط کارشناسان ما برسی خواهد شد.',
